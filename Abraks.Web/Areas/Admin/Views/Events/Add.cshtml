@model EventAddingBindingModel
@{
    ViewData["Title"] = "Add Event";
}

<h2>Add Event</h2>
<br/>
<form asp-area="Admin" asp-controller="Events" asp-action="Add" method="post">
    
    <div class="container">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Dance" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Dance" class="form-control" />
                <span asp-validation-for="Dance" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Place" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PosterUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="PosterUrl" class="form-control" />
                <span asp-validation-for="PosterUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input type="date" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input type="date" asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-8 offset-2">
                <input type="submit" class="btn btn-success" value="Add Event" />
                <a asp-area="Admin" asp-controller="Events" asp-action="Index" class="btn btn-info">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
